{
  # e.g. en-GB or en-US would be possible
  "cultureInfo": "de-DE",
  # after how many hours should the breakfastBreak be deducted
  "breakDeduction1": 3.0,
  # after how many hours should the lunchBreak be deducted
  "breakDeduction2": 6.0,
  # break threshold in minutes (smaller breaks will be ignored e.g. PC reboots)
  "breakThreshold": 3.0,
  # default widget window state
  "topMost": true,
  # default widget window position (-1 for top and left means CenterScreen)
  # both values must be set to different values than -1 if you want to change it 
  "topPosition": -1,
  "leftPosition": -1,
  # force double click behavior for widget
  # none   = use the same behavior as the widget
  # joined = use the joined mode where breaks are part of the worktime
  # breaks = use the breaks mode where breaks are tracked separately
  "forceWidgetDoubleClickBehavior": "breaks"
}